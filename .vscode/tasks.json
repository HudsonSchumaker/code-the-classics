{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf", 
                "-lSDL2_mixer",
                "-lSDL2_gfx",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/build/game"
            ],
            "options": {
                "cwd": "${workspaceFolder}/space-invaders/macos"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}